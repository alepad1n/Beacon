#tag Class
Protected Class OmniBarSeparator
Inherits ControlCanvas
	#tag Event
		Sub Paint(G As Graphics, Areas() As Rect, Highlighted As Boolean, SafeArea As Rect)
		  #Pragma Unused SafeArea
		  #Pragma Unused Highlighted
		  #Pragma Unused Areas
		  
		  G.ClearRectangle(0, 0, G.Width, G.Height)
		  G.DrawingColor = SystemColors.SeparatorColor
		  G.FillRectangle(0, G.Height - 1, G.Width, 1)
		End Sub
	#tag EndEvent


	#tag Note, Name = What
		This is for when you want a separator to match the OmniBar without extending it the entire
		width of the view.
		
	#tag EndNote



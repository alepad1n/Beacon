#tag Events AdjusterThread
	#tag Event
		Sub UserInterfaceUpdate(data() as Dictionary)
		  For Each Dict As Dictionary In Data
		    If Dict.HasKey("Finished") And Dict.Value("Finished").BooleanValue = True THen
		      Self.SetupUI()
		    End If
